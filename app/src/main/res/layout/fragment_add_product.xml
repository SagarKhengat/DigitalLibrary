<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="sagar.khengat.digitallibrary.activities.MainActivityForAdmin">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.00">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayoutBookId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/textInputEditTextBookId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter BT number Of Book"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="@android:color/background_dark" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayoutBookName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/textInputEditTextBookName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Book Name"
                        android:inputType="text"
                        android:maxLines="2"
                        android:textColor="@android:color/background_dark" />
                </android.support.design.widget.TextInputLayout>




                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayoutBookAuther"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/textInputEditTextBookAuther"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Book Author"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="@android:color/background_dark" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayoutBookOriginalPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/textInputEditTextBookOriginalPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Original Price in Rs."
                        android:inputType="number"
                        android:maxLines="1"
                        android:textColor="@android:color/background_dark" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayoutBookPublicationHouse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/textInputEditTextBookPublicationHouse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Book Publication House"
                        android:inputType="text"
                        android:maxLines="2"
                        android:textColor="@android:color/background_dark" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayoutBookCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/textInputEditTextBookCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Book Category"
                        android:inputType="text"
                        android:maxLines="2"
                        android:textColor="@android:color/background_dark" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayoutBookPages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/textInputEditTextBookPages"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Total Pages"
                        android:inputType="numberDecimal"
                        android:maxLines="1"
                        android:textColor="@android:color/background_dark" />
                </android.support.design.widget.TextInputLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/tv_picture"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="4"
                        android:text="Select Image"
                        android:textColor="@android:color/background_dark"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/iv_camera"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:padding="5dp"
                        android:src="@drawable/hdpi_icon_add_edit_pic_gray" />

                    <ImageView
                        android:id="@+id/iv_gallery"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:padding="5dp"
                        android:src="@drawable/hdpi_icon_select_pic" />
                </LinearLayout>


                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="358dp"
                    android:layout_weight="0.91" />
                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab"
                    android:layout_width="55dp"
                    android:layout_height="51dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="@dimen/fab_margin"
                    app:layout_anchor="@+id/linearLayout"
                    app:layout_anchorGravity="bottom|center"
                    app:srcCompat="@drawable/ic_add_white_24dp" />
            </LinearLayout>
        </ScrollView>




</LinearLayout>
