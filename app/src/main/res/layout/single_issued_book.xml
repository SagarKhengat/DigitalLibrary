<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignTop="@+id/linearLayout2"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_faculty_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="sans-serif-light"
                android:paddingTop="8dp"
                android:maxLines="1"
                android:text="Book Bt Number: "
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="14sp" />
            <TextView

                android:id="@+id/book_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_faculty_id"
                android:maxLines="1"
                android:paddingTop="8dp"
                android:text="Id"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_faculty_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="sans-serif-light"
                android:paddingTop="8dp"
                android:maxLines="1"
                android:text="Book name: "
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="14sp" />
            <TextView

                android:id="@+id/book_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_faculty_name"
                android:maxLines="1"
                android:paddingTop="8dp"
                android:text="name"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_faculty_orstudent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="sans-serif-light"
                android:paddingTop="8dp"
                android:maxLines="1"
                android:text="Borrower Is.: "
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="14sp" />
            <TextView

                android:id="@+id/borrower_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_faculty_orstudent"
                android:maxLines="1"
                android:paddingTop="8dp"
                android:text="Faculty"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_faculty_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="sans-serif-light"
                android:paddingTop="8dp"
                android:maxLines="1"
                android:text="Book Borrower.: "
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="14sp" />
            <TextView

                android:id="@+id/book_borrower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_faculty_contact"
                android:maxLines="1"
                android:paddingTop="8dp"
                android:text="Contact"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_faculty_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="sans-serif-light"
                android:paddingTop="8dp"
                android:maxLines="1"
                android:text="Borrower Id: "
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="14sp" />
            <TextView

                android:id="@+id/borrower_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_faculty_password"
                android:maxLines="1"
                android:paddingTop="8dp"
                android:text="Password"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_faculty_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="sans-serif-light"
                android:paddingTop="8dp"
                android:maxLines="1"
                android:text="Borrower Contact No.: "
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="14sp" />
            <TextView

                android:id="@+id/borrower_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_faculty_email"
                android:maxLines="1"
                android:paddingTop="8dp"
                android:text="Email"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/issue"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/digitallibrary"

                />
            <ImageView

                android:id="@+id/reject"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/digitallibrary"
                android:layout_toRightOf="@id/issue"
                />

        </RelativeLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:layout_below="@id/main"
        android:background="@android:color/darker_gray"
        android:orientation="vertical"
        android:id="@+id/linearLayout2" />
</RelativeLayout>