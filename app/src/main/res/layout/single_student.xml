<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignTop="@+id/linearLayout2"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_student_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="sans-serif-light"
                android:paddingTop="8dp"
                android:maxLines="1"
                android:text="Student Id: "
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="14sp" />
            <TextView

                android:id="@+id/student_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_student_id"
                android:maxLines="1"
                android:paddingTop="8dp"
                android:text="Id"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_student_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="sans-serif-light"
                android:paddingTop="8dp"
                android:maxLines="1"
                android:text="Student name: "
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="14sp" />
            <TextView

                android:id="@+id/student_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_student_name"
                android:maxLines="1"
                android:paddingTop="8dp"
                android:text="name"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_student_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="sans-serif-light"
                android:paddingTop="8dp"
                android:maxLines="1"
                android:text="Student Contact No.: "
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="14sp" />
            <TextView

                android:id="@+id/student_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_student_contact"
                android:maxLines="1"
                android:paddingTop="8dp"
                android:text="Contact"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_student_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="sans-serif-light"
                android:paddingTop="8dp"
                android:maxLines="1"
                android:text="Student Password: "
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="14sp" />
            <TextView

                android:id="@+id/student_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_student_password"
                android:maxLines="1"
                android:paddingTop="8dp"
                android:text="Password"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_student_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="sans-serif-light"
                android:paddingTop="8dp"
                android:maxLines="1"
                android:text="Student Email: "
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="14sp" />
            <TextView

                android:id="@+id/student_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_student_email"
                android:maxLines="1"
                android:paddingTop="8dp"
                android:text="Password"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_student_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="sans-serif-light"
                android:paddingTop="8dp"
                android:maxLines="2"
                android:text="Student Address: "
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="14sp" />
            <TextView

                android:id="@+id/student_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_student_address"
                android:maxLines="2"
                android:paddingTop="8dp"
                android:text="Address"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:layout_below="@id/main"
        android:background="@android:color/darker_gray"
        android:orientation="vertical"
        android:id="@+id/linearLayout2" />
</RelativeLayout>